    "security:audit": "npm audit && node scripts/security-audit.js",
    "deploy:staging": "bash scripts/deploy-production.sh staging",
    "deploy:production": "bash scripts/deploy-production.sh production",
    "docker:build": "docker build -f infrastructure/Dockerfile.prod -t booklocal:latest .",
    "docker:run": "docker-compose -f infrastructure/docker-compose.prod.yml up",
    "monitoring:start": "docker-compose -f infrastructure/docker-compose.monitoring.yml up -d",
